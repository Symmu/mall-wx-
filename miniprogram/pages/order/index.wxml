            val.substring(6, 8) + "日" +
            val.substring(8, 10) + ":" +
            val.substring(10, 12) + ":" +
            val.substring(12, 14) + ""
    }
    var slice = function (str, a, b) {
        return str.slice(a, b);
    }
    module.exports = {
        FOO: foo,
        bar: bar,
        sub: sub,
        slice: slice
    };
