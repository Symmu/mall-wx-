<Tabs tabs="{{tabs}}" bind:tabsItemChange="handleTabsItemChange">
        <view class="order_main">
            <view class="order_item" wx:for="{{orders}}" wx:key="order_id" bindtap="handlePay"
                hover-class="navigator-hover" data-data="{{item}}">
                <view class="order_no_row">
                    <view class="order_no_text">订单编号</view>
                    <!-- {{item.order_number}} -->
                    <view class="order_no_value">{{item.order_number}}</view>
                </view>
                <view class="order_price_row">
                    <view class="order_price_text">订单价格</view>
                    <!-- {{item.order_price}} -->
                    <!-- <block wx:for="{{item.orderGoods}}" wx:key="goods_id">
                        <view class="order_price_num">数量x{{item.goods_number}}\t价格:￥{{item.goods_price}}</view>
                        <view class="order_price_num">数量x{{item.goods_number}}</view>
                    </block> -->
                    <view class="order_price_value" style="color:{{item.order_pay == '1' ? '' : '#eb4450'}};">
                        {{item.order_pay == '1' ? '已付款:' : '待付款:'}}￥{{item.order_price}}
                    </view>
                </view>
                <view class="order_time_row">
                    <view class="order_time_text">订单日期</view>
                    <!-- {{item.create_time_cn}} -->
                    <view class="order_time_value">{{tools.sub(item.create_time_cn)}}</view>
                </view>
            </view>
        </view>
</Tabs>

