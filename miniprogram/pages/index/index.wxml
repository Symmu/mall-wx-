<view class="SearchInput">
  <!-- 搜索框 -->
  <SearchInput></SearchInput>
  <!-- 搜索框 -->

  <!-- 轮播图 -->
  <view class="index_swiper" hover-class="none" hover-stop-propagation="false">
    <swiper autoplay indicator-dots circular>
      <swiper-item wx:for="{{SwiperList}}" wx:key="goods_id">
        <navigator url="/pages/goods_detail/index?goods_id={{item.goodsId}}">
        <!-- <navigator url="/pages/goods_detail/index?goods_id={{item.goods_id}}"> -->
          <!-- <image mode="widthFix" src="{{item.image_src}}"></image> -->
          <image mode="widthFix" src="{{item.imageSrc}}"></image>
        </navigator>
      </swiper-item>
    </swiper>
  </view>
  <!-- 轮播图 -->

  <!-- 导航 -->
  <view class="index_cate">
    <navigator 
    class="" 
    target="" 
    url="/pages/category/index"
    hover-class="navigator-hover" 
    open-type="switchTab"
    wx:for="{{CateList}}"
    wx:key="name"
    >
      <image src="{{item.imageSrc}}" mode="widthFix" ></image>
      <!-- <image src="{{item.image_src}}" mode="widthFix" ></image> -->
    </navigator>
  </view>
  <!-- 导航 -->

  <!-- 楼层 -->
  <view class="index_floor">
    <view class="floor_group"
    wx:for="{{FloorList}}"
    wx:for-item="item1"
    wx:for-index="index1"
    wx:key="floor_title">
      <!-- 标题 -->
      <view class="floor_title">
        <image mode="widthFix" src="{{item1.imageSrc}}"></image>
        <!-- <image mode="widthFix" src="{{item1.floor_title.imageSrc}}"></image> -->
      </view>
      <!-- 内容 -->
      <view class="floor_list">
        <navigator 
        url="{{item2.navigatorUrl}}" 
        hover-class="navigator-hover" 
        open-type="navigate"
        wx:for="{{item1.product_list}}"
        wx:for-item="item2"
        wx:for-index="index2"
        wx:key="name"
        >
        <!-- url="{{item2.navigator_url}}"  -->
          <image mode="{{index2===0?'widthFix':'scaleToFill'}}" src="{{item2.imageSrc}}"></image>
          <!-- <image mode="{{index2===0?'widthFix':'scaleToFill'}}" src="{{item2.image_src}}"></image> -->
        </navigator>
      </view>
    </view>
  </view>
  <!-- 楼层 -->
</view>
